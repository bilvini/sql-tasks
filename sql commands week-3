(1)
CREATE TABLE EMPLOYEES(EMPLOYEEID NUMBER(20),
  FIRSTNAME VARCHAR(20)
  ,LASTNAME VARCHAR(20),DATEOFBIRTH DATE,
  DEPARTMENT VARCHAR(10));

CREATE TABLE Orders (
    OrderID INT PRIMARY KEY,
    OrderDate DATE,
    CustomerID INT,
    Amount DECIMAL(10, 2)
);
(2)
INSERT INTO EMPLOYEES (EMPLOYEEID, FIRSTNAME, LASTNAME, DATEOFBIRTH, DEPARTMENT)
VALUES (1, 'ALICE', 'JOHNSON', '1990-01-15', 'HR');

INSERT INTO ORDERS (ORDERID, ORDERDATE, CUSTOMERID, AMOUNT)
VALUES
(1, '2024-10-01', 101, 11,500.75),
(2, '2024-10-05', 102, 15,200.50),
(3, '2024-10-10', 103, 29,500.00),
(4, '2024-10-12', 104, 6,200.25),
(5, '2024-10-15', 105, 37,500.00);
(3)
SELECT * FROM EMPLOYEES;
SELECT * FROM ORDERS;
SELECT FIRSTNAME, LASTNAME FROM EMPLOYEES;
SELECT ORDERID, AMOUNT FROM ORDERS;
(4)
UPDATE EMPLOYEES
SET DEPARTMENT = 'Finance'
WHERE EMPLOYEEID = 1;

UPDATE ORDERS
SET AMOUNT = 500.00
WHERE ORDERID = 2;
(5)
DELETE FROM EMPLOYEES
WHERE EMPLOYEEID = 1;

DELETE FROM ORDERS
WHERE AMOUNT < 100;
(6)
SELECT * FROM EMPLOYEES
WHERE DEPARTMENT = 'HR';

SELECT * FROM ORDERS
WHERE AMOUNT > 300;
(7)
SELECT * FROM EMPLOYEES
WHERE DEPARTMENT = 'HR' AND DATEOFBIRTH > '1990-01-01';

SELECT * FROM ORDERS
WHERE AMOUNT > 300 AND ORDERDATE < '2023-01-01';

SELECT * FROM EMPLOYEES
WHERE DEPARTMENT IN ('HR', 'Finance');

SELECT * FROM ORDERS
WHERE AMOUNT < 100 OR ORDERDATE > '2023-01-01';
(8)
SELECT * FROM EMPLOYEES
ORDER BY LASTNAME ASC;

SELECT * FROM ORDERS
ORDER BY AMOUNT DESC;
(9)
SELECT COUNT(*) AS NumberOfEmployees FROM EMPLOYEES;
SELECT COUNT(*) AS NumberOfOrders FROM ORDERS;
SELECT AVG(AMOUNT) AS AverageAmount FROM ORDERS;
SELECT AVG(YEAR(CURDATE()) - YEAR(DATEOFBIRTH)) AS AverageAge
FROM EMPLOYEES;
(10)
SELECT DEPARTMENT, COUNT(*) AS NumberOfEmployees
FROM EMPLOYEES
GROUP BY DEPARTMENT;

SELECT CUSTOMERID, SUM(AMOUNT) AS TotalAmount
FROM ORDERS
GROUP BY CUSTOMERID;
(11)
SELECT DEPARTMENT, COUNT(*) AS NumberOfEmployees
FROM EMPLOYEES
GROUP BY DEPARTMENT
HAVING COUNT(*) > 5;

SELECT CUSTOMERID, SUM(AMOUNT) AS TotalAmount
FROM ORDERS
GROUP BY CUSTOMERID
HAVING SUM(AMOUNT) > 1000;
(12)
SELECT E.FIRSTNAME, E.LASTNAME, O.AMOUNT
FROM EMPLOYEES E
INNER JOIN ORDERS O ON E.EMPLOYEEID = O.CUSTOMERID;

SELECT E.FIRSTNAME, E.LASTNAME, O.AMOUNT
FROM EMPLOYEES E
LEFT JOIN ORDERS O ON E.EMPLOYEEID = O.CUSTOMERID;




